// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Inventory {
  // Product Information
  id                    Int      @id @default(autoincrement())
  product               String   @unique
  product_category      String 
  qty                   Int       @default(0)
  price                 Float
  vendor                String? 
  location              String?

  @@map(name: "inventory")
}